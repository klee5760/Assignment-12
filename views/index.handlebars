<div class="container">

    <div class = "jumbotron">
        <h1>Order Your Burger</h1>
        <p>Burger Orders for Pickup</p>
        <br>
        <h2>Select your favorite Burger!</h2>
        <panel><form class = "create-form">
            <div class = "form-group">
                <label for = "newburger">Order Here!</label>

                <select data-placeholder = "" id"newburger" name="burger">
                    <option value="Nothing Selected" selected>Please Select a Sandwich</option>
                        <option value="BigMac">Big Mac</option>
                        <option value="Whopper">Whopper</option>
                        <option value="DoubleDouble">Double Double (double meat and cheese)</option>
                        <option value="KatsuBurger">Katsu Burger</option>
                        <option value="ChickenBurger">Chicken Burger</option>
                        
                </select>

                <button type = "submit" class="btn btn-success" id="addburger">
                    <span class = "fa fa-plus"></span>
                </button>          
            </div>
        </form>
        </panel>
    </div>

    <div class = "row">
        <div class = "col-sm-6">
            <div class = "panel panel-default">
                <div class = "panel-heading" id = "leftside"><Strong>Order your Burger</Strong>
                <p> Send your order to cashier when ready for pick up</p>
                </div>
                <div class = "panel-body">

                    <ul>
                           {{#each burgers}}
                        {{#unless devoured}}

                        <span><strong> {{this.id}} - {{this.burger_name}}</strong></span>
                        <button type="button" class="plusburger btn btn-warning" id="plusbutton" data-id="{{this.id}}"
                            data-newDevoured="{{devour}}"><span class="fa fa-plus"></span></button>
                        <hr>
                        {{/unless}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
 <div class = "col-sm-6">
            <div class = "panel panel-default">
                <div class = "panel-heading" id = "rightside"><Strong>Order your Burger</Strong>
                <p> Send your order to cashier when ready for pick up</p>
                </div>
                <div class = "panel-body">

                    <ul>
                           {{#each burgers}}
                        {{#if devoured}}

                        <span><strong> {{this.id}} - {{this.burger_name}}</strong></span>
                        <button type="button" class="minusburger btn btn-warning" id="minusbutton" data-id="{{this.id}}"
                            data-newDevoured="{{devour}}"><span class="fa fa-minus"></span></button>
                        <hr>
                        {{/if}}
                        {{/each}}
                    </ul>


         </div>
            </div>
        </div>
 </div>
        </div>